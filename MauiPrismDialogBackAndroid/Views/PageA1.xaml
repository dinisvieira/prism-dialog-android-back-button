<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xaml="http://prismlibrary.com"
             xaml:DynamicTab.Title="Tab A"
             x:Class="MauiPrismDialogBackAndroid.Views.PageA1"
             Title="PageA1">
    <VerticalStackLayout Margin="20">
        <Label
            Margin="0,50,0,50"
            FontSize="20"
            Text="Tab A (Root Page)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Navigate to Page 2" Command="{Binding NavigatePageA2Command}" Margin="0,0,0,10" />
        <Button Text="Show Dialog" Command="{Binding ShowDialogCommand}" />
    </VerticalStackLayout>
</ContentPage>